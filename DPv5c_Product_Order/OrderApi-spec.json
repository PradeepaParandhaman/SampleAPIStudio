{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Order",
    "x-ibm-name": "order",
    "description": "View and track your orders and deliveries"
  },
  "basePath": "/orders/order",
  "paths": {
    "/{order-number}": {
      "parameters": [
        {
          "name": "order-number",
          "required": true,
          "in": "path",
          "type": "string",
          "description": "Order number to lookup - you should find this in your confirmation e-mail"
        }
      ],
      "get": {
        "responses": {
          "200": {
            "description": "Order found successfully",
            "schema": {
              "type": "object",
              "title": "Order Details",
              "properties": {
                "order_number": {
                  "title": "Order Number",
                  "type": "string",
                  "example": "ORD00989792"
                },
                "tracking_status": {
                  "title": "Tracking Status",
                  "type": "object"
                },
                "shipped_at": {
                  "title": "Date Shipped",
                  "type": "string",
                  "format": "date-time"
                },
                "created_at": {
                  "title": "Date Order Created",
                  "type": "string",
                  "format": "date-time"
                },
                "status": {
                  "title": "Order Status",
                  "type": "string",
                  "enum": [
                    "SHIPPED",
                    "PICKED",
                    "PENDING",
                    "DELIVERED"
                  ]
                },
                "tracking_reference": {
                  "title": "Tracking Reference"
                }
              }
            }
          }
        },
        "summary": "Retrieve the details of your order.",
        "produces": [
          "application/json"
        ]
      }
    }
  },
  "securityDefinitions": {
    "clientID": {
      "type": "apiKey",
      "in": "header",
      "name": "X-IBM-Client-Id"
    }
  },
  "security": [
    {
      "clientID": []
    }
  ],
  "schemes": [
    "https"
  ],
  "responses": {},
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "externalDocs": {
    "url": "https://github.com/ibm-apiconnect/sample-orders-api",
    "description": "Github project for this API, containing source code and deployment pipeline"
  }
}
